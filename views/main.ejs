<!-- main.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            justify-content: center; 
            align-items: center;
        }
        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }
        nav ul {
            list-style-type: none;
            padding: 0;
        }
        nav ul li {
            display: inline;
            margin-right: 20px;
        }
        nav ul li a {
            text-decoration: none;
            color: #fff;
            font-weight: bold;
        }
        .hero {
            background-color: #007bff;
            color: #fff;
            padding: 50px 20px;
            text-align: center;
        }
        .features {
            background-color: #fff;
            width: 1000px;
            padding: 20px;
            margin: 20px auto; 
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .carousel {
            max-width: 500px; 
            margin: 0 auto; 
        }
        .carousel-inner {
            border-radius: 5px;
            overflow: hidden;
        }
        .carousel-item img {
            width: 100%;
            height: 300px; 
            object-fit: cover; 
        }
        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Bank</h1>
        <nav>
            <ul>
                <li><a href="/main">Home</a></li>
                <li><a href="/logout">Log Out</a></li>
                <li><a href="/convertion">Convert your money</a></li>
                <li><a href="/stock">Stock</a></li>
                <li><a href="/search">Search unknown info here</a></li>
            </ul>
        </nav>
    </header>
    
    <main>
        <% if (cards && cards.length) { %>
            <% cards.forEach(card => { %>
                <div class="features">
                    <h2><%= card.name.en %></h2>
                    <p><%= card.description.en %></p>
                    <div id="carousel<%= card._id %>" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <% card.images.forEach((image, index) => { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <img src="<%= image %>" class="d-block w-100" alt="...">
                                </div>
                            <% }) %>
                        </div>
                        <a class="carousel-control-prev" href="#carousel<%= card._id %>" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel<%= card._id %>" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No cards available</p>
        <% } %>
    </main>
    
    
    <footer>
        <p>Bayazitova Kamila || SE-2206</p>
    </footer>
</body>
</html>
